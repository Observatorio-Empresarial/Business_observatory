@model IEnumerable<Business_observatory.Models.Archivo>

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Index";
}

<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Archivos</h3>
            </div>
        </div>

        <div class="row" id="cancel-row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Lista de Archivos </h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive mb-4">
                            <table id="ecommerce-product-customers" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripcion</th>
                                        <th>Tipo</th>
                                        <th>Extension</th>
                                        <th>Fecha de Creacion</th>
                                        <th>Proyecto Id</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tipo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Extension)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaSubida)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Proyectos.Id)
                                            </td>
                                            <td class="">
                                                <ul class="table-controls">
                                                    <li>
                                                        <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                            <i class="flaticon-edit"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a asp-controller="Archivoes" asp-action="DeleteFileFromDatabase" asp-route-id="@item.Id">
                                                            <i class="flaticon-delete-5"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a type="button" class="btn btn-dark" asp-controller="Archivoes" asp-action="DownloadFileFromDatabase" asp-route-id="@item.Id">Descargar</a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--  END CONTENT PART  -->