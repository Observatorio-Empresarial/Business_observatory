@model Business_observatory.Models.Archivo

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Create";
}
<div class="page-header">
    <div class="page-title">
        <h3>Tablesaw</h3>
        <div class="crumbs">
            <ul id="breadcrumbs" class="breadcrumb">
                <li><a href="index.html"><i class="flaticon-home-fill"></i></a></li>
                <li><a href="#">Tables</a></li>
                <li class="active"><a href="#">Tablesaw</a> </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>Crear Archivo</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row mb-4">
                        <div hidden class="form-group col-md-6">
                            <label asp-for="Nombre"></label>
                            <input asp-for="Nombre" type="text" class="form-control" id="inputEmail4" placeholder="Nombre">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Descripcion"></label>
                            <input asp-for="Descripcion" type="text" class="form-control" id="inputPassword4" placeholder="Descripcion">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ProyectosId">Proyecto</label>
                        <select name="ProyectosId" id="inputState" class="form-control">
                           <option selected>Choose...</option>
                            @foreach (var item in (SelectList)ViewData["ProyectosId"])
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="statbox widget box box-shadow">
                            <div class="widget-header">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        <h4>Cargar Archivo</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                <div class="custom-file-container" data-upload-id="myFirstImage">
                                    <label>Cargar<a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">x</a></label>
                                    <label class="custom-file-container__custom-file">
                                        <input name="file" type="file" class="custom-file-container__custom-file__custom-file-input" accept="*/*">     
                                        <span class="custom-file-container__custom-file__custom-file-control"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div hidden class="form-group mb-4">
                        <label asp-for="Tipo"></label>
                        <input asp-for="Tipo" type="text" class="form-control" id="inputAddress" placeholder="Tipo">
                    </div>
                    <div hidden class="form-group mb-4">
                        <label asp-for="Extension"></label>
                        <input asp-for="Extension" type="text" class="form-control" id="inputAddress2" placeholder="Extension">
                    </div>
                    <div hidden class="form-group mb-4">
                        <label asp-for="FechaSubida"></label>
                        <input asp-for="FechaSubida" type="date" class="form-control" id="inputAddress2" placeholder="FechaSubida">
                    </div>
                    <button type="submit">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
