@model Business_observatory.Models.Proyecto

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Editar Proyecto</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-14 col-lg-14 col-md-14 col-sm-14 col-14 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-14 col-md-14 col-sm-14 col-14">
                                <h4>Proyecto</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area add-category">
                        <div class="row">
                            <div class="mx-xl-auto col-xl-10 col-md-12">
                                <div class="card card-default">
                                    <div class="card-heading"><h2 class="card-title"><span>Editar Proyecto</span></h2></div>
                                    <div class="card-body">
                                        <div class="card-body">
                                            <form class="form-horizontal" asp-action="Create">
                                                <input type="hidden" asp-for="Id" />
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Nombre" class="col-md-4">Nombre :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Nombre" class="form-control" class="form-control" name="Nombre:" type="text">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Descripcion" class="col-md-4">Descripcion: </label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Descripcion" class="form-control" class="form-control" name="Apellido" type="text">
                                                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="FechaInicio" class="col-md-4"> Fecha de Inicio: </label>
                                                        <div class="col-md-8">
                                                            <input asp-for="FechaInicio" class="form-control" />
                                                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="FechaFinalizacion" class="col-md-4"> Fecha de Finalizacion :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="FechaFinalizacion" class="form-control" />
                                                            <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Responsable" class="col-md-4">Responsable:</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Responsable" class="form-control" class="form-control" name="Responsable" type="text">
                                                            <span asp-validation-for="Responsable" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Empresa" class="col-md-4"> Empresa :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Empresa" class="form-control" />
                                                            <span asp-validation-for="Empresa" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="FechaCreacion" class="col-md-4">Fecha de Creacion :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="FechaCreacion" class="form-control" />
                                                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="AspNetUserId" class="col-md-4"> AspNetUserId :</label>
                                                        <div class="col-md-8">
                                                            <select asp-for="AspNetUserId" class="form-control" asp-items="ViewBag.AspNetUserId"></select>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="align-center">
                                                    <input value="Create" class="btn mt-5 mb-4" type="submit">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!--  END CONTENT PART  -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
