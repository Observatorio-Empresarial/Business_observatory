@model Business_observatory.Models.Contacto

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="page-title">
        <h3>Tablesaw</h3>
        <div class="crumbs">
            <ul id="breadcrumbs" class="breadcrumb">
                <li><a href="index.html"><i class="flaticon-home-fill"></i></a></li>
                <li><a href="#">Tables</a></li>
                <li class="active"><a href="#">Tablesaw</a> </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>Forms Grid</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form>
                    <div class="form-row mb-4">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Password</label>
                            <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="form-group mb-4">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row mb-4">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" id="inputCity">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <select id="inputState" class="form-control">
                                <option selected>Choose...</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="text" class="form-control" id="inputZip">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check pl-0">
                            <div class="custom-control custom-checkbox checkbox-info">
                                <input type="checkbox" class="custom-control-input" id="gridCheck">
                                <label class="custom-control-label" for="gridCheck">Check me out</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-button-7 mb-4 mt-3">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Editar Contacto</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-14 col-lg-14 col-md-14 col-sm-14 col-14 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-14 col-md-14 col-sm-14 col-14">
                                <h4>Contacto</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area add-category">
                        <div class="row">
                            <div class="mx-xl-auto col-xl-10 col-md-12">
                                <div class="card card-default">
                                    <div class="card-heading"><h2 class="card-title"><span>Editar contacto</span></h2></div>
                                    <div class="card-body">
                                        <div class="card-body">
                                            <form class="form-horizontal" asp-action="Edit">
                                                <input type="hidden" asp-for="Id" />
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Nombre" class="col-md-4">Nombre :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Nombre" class="form-control" class="form-control" name="Nombre:" type="text">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Apellido" class="col-md-4">Apellido :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Apellido" class="form-control" class="form-control" name="Apellido" type="text">
                                                            <span asp-validation-for="Apellido" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Email" class="col-md-4">Email :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Email" class="form-control" class="form-control" name="Email" type="text">
                                                            <span asp-validation-for="Email" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Telefono" class="col-md-4">Telefono :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Telefono" class="form-control" class="form-control" name="Telefono" type="text">
                                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Message" class="col-md-4">Mensaje:</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Message" class="form-control" class="form-control" name="Message" type="text">
                                                            <span asp-validation-for="Message" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Estado" class="col-md-4"> Estado :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Estado" class="form-control" readonly id="my-input" />
                                                            <span asp-validation-for="Estado" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="FechaCreacion" class="col-md-4">Fecha de Creacion :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="FechaCreacion" class="form-control" />
                                                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="align-center">
                                                    <input value="Save" class="btn mt-5 mb-4" type="submit">
                                                </div>
                                            </form>
                                            <label>Cambiar el estado</label>
                                            <div>
                                                <button id="button1">Activo</button>
                                                <button id="button2">En Progreso</button>
                                                <button id="button3">Inactivo</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    document.getElementById("button1").addEventListener("click", function () {
        document.getElementById("my-input").value = "Activo";
    });

    document.getElementById("button2").addEventListener("click", function () {
        document.getElementById("my-input").value = "En Progreso";
    });

    document.getElementById("button3").addEventListener("click", function () {
        document.getElementById("my-input").value = "Inactivo";
    });
</script>
<!--  END CONTENT PART  -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
