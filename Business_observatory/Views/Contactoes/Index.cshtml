@model IEnumerable<Business_observatory.Models.Contacto>

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Index";
}

<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Contactos</h3>
            </div>
        </div>

        <div class="row" id="cancel-row">
            <div class="col-xl-16 col-lg-16 col-md-16 col-sm-16 col-16 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-16 col-md-16 col-sm-16 col-16">
                                <h4>Lista de Contactos </h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive mb-4">
                            <table id="ecommerce-product-customers" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Email</th>
                                        <th>Telefono</th>
                                        <th>Mensaje</th>
                                        <th>Estado</th>
                                        <th>#</th>
                                        <th>Fecha de Creacion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Message)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Estado)
                                            </td>
                                            <td>
                                                @if (item.Estado == "Activo")
                                                {
                                                    <img src="~/Images/CheckIcon.png" style="width:50px; height:50px">
                                                }
                                                else if (item.Estado == "En Progreso")
                                                {
                                                    <img src="~/Images/pending-clock-icon.png" style="width:50px; height:50px">
                                                }
                                                else if (item.Estado == "Inactivo")
                                                {
                                                    <img src="~/Images/red-x-icon.png" style="width:50px; height:50px">
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaCreacion)
                                            </td>

                                            <td class="">
                                                <ul class="table-controls">
                                                    <li>
                                                        <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                            <i class="flaticon-edit"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Eliminar">
                                                            <i class="flaticon-delete-5"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--  END CONTENT PART  -->
