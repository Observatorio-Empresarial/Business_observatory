@model Business_observatory.Models.Contact

@{
    ViewData["Title"] = "Create";
}
<div class="page-heading page__heading__img">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="header-text">
                    <h2>Contactenos</h2>
                    <div class="div-dec"></div>
                    <div class="div"><p class="div__p">Los proyectos de investigación son estudios planificados y diseñados para investigar un tema específico con el objetivo de obtener nuevos conocimientos o desarrollar soluciones a problemas.</p></div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <p>Coordinadora</p>
    <p>Dr. Juan Carlos Sánchez</p>
    <p>Correo: jaun@gmail.com</p>
    <p>Teléfono: 123456789</p>
    <p>Horario de atención: 8:00 a 12:00 y 2:00 a 6:00</p>
    <p>Ubicación: Edificio 1, piso 2, oficina 2.1.1</p>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col ">
            <p>Redes Sociales</p>
            <p>Facebook: <a href="https://www.facebook.com/">Universidad del Valle</a></p>
            <p>Twitter: <a href="https://twitter.com">Universidad del Valle</a></p>

        </div>
        <div class="col">
            <div class="container container__contact ">
                <div class="col-md-4 align-content-center">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname" class="control-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" />
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Enviar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
