@model Business_observatory.Models.ProjectCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <input asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Project.RegistrationDate" class="control-label"></label>
                <input asp-for="Project.RegistrationDate" class="form-control" />
                <span asp-validation-for="Project.RegistrationDate" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Project.Status" class="control-label"></label>
                <input asp-for="Project.Status" class="form-control" />
                <span asp-validation-for="Project.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CategoryID">Categories</label>
                <select name="CategoryID" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div hidden class="form-group">
                <label asp-for="Project.CompanyId" class="control-label"></label>
                <select asp-for="Project.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div hidden class="form-group">
                <label asp-for="Project.AspNetUserId" class="control-label"></label>
                <select asp-for="Project.AspNetUserId" class="form-control" asp-items="ViewBag.AspNetUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
