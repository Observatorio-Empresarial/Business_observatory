@model Business_observatory.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<div id="rs-checkout" class="rs-checkout pt-120 pb-120 md-pt-80 md-pb-80">
	<div class="container">
		<div class="full-grid">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="Title" class="control-label"></label>
						<input asp-for="Title" class="form-control" />
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="Description" class="control-label"></label>
						<textarea asp-for="Description" class="form-control" rows="4" ></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="RegistrationDate" class="control-label"></label>
						<input asp-for="RegistrationDate" class="form-control" />
						<span asp-validation-for="RegistrationDate" class="text-danger"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="Status" class="control-label"></label>
						<input asp-for="Status" class="form-control" />
						<span asp-validation-for="Status" class="text-danger"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="CompanyId" class="control-label"></label>
						<select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
						<span asp-validation-for="CompanyId" class="text-danger"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<label asp-for="AspNetUserId" class="control-label"></label>
						<select asp-for="AspNetUserId" class="form-control" asp-items="ViewBag.AspNetUserId"></select>
						<span asp-validation-for="AspNetUserId" class="text-danger"></span>
					</div>
				</div>
				<div class="payment-method mt-40 md-mt-20">
					<div class="bottom-area">
						<input type="submit" value="Save" class="btn btn-primary" />
					</div>
				</div>
				
			</form>
		</div>
		<div>
			<a asp-action="IndexList">Back to List</a>
		</div>
	</div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
