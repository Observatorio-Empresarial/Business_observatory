@model Business_observatory.Models.Categoria

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Edit";
}
<div class="page-header">
    <div class="page-title">
        <h3>Categorias</h3>
        <div class="crumbs">
            <ul id="breadcrumbs" class="breadcrumb">
                <li><a href="index.html"><i class="flaticon-home-fill"></i></a></li>
                <li><a href="#">Tables</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>Editar Categoria</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-row mb-4">

                        <label asp-for="Nombre">Nombre :</label>
                        <input asp-for="Nombre" class="form-control" class="form-control" name="Nombre" type="text">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-row mb-4">

                        <label asp-for="Descripcion">Descripcion :</label>
                        <input asp-for="Descripcion" class="form-control" class="form-control" name="Descripcion" type="text">
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-row mb-4">

                        <label asp-for="FechaCreacion">Fecha de Creacion :</label>
                        <input asp-for="FechaCreacion" class="form-control" />
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>

                    <input value="Save" type="submit">
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




