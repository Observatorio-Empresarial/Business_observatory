@model Business_observatory.Models.Categoria

@{
    Layout = "~/Views/Shared/BackendLayout.cshtml";
    ViewData["Title"] = "Create";
}


<!--  BEGIN CONTENT PART  -->
<div id="content" class="main-content">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h3>Añadir Categoria</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Categoria</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area add-category">
                        <div class="row">
                            <div class="mx-xl-auto col-xl-10 col-md-12">
                                <div class="card card-default">
                                    <div class="card-heading"><h2 class="card-title"><span>Ingrese la nueva categoria</span></h2></div>
                                    <div class="card-body">
                                        <div class="card-body" >
                                            <form class="form-horizontal" asp-action="Create">
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Nombre"  class="col-md-4">Nombre :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Nombre" class="form-control" class="form-control" name="Nombre" type="text">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="Descripcion" class="col-md-4">Descripcion :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="Descripcion" class="form-control" class="form-control" name="Descripcion" type="text">
                                                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-4">
                                                    <div class="row">
                                                        <label asp-for="FechaCreacion"  class="col-md-4">Fecha de Creacion :</label>
                                                        <div class="col-md-8">
                                                            <input asp-for="FechaCreacion" class="form-control" />
                                                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="align-center">
                                                    <input value="Create"  class="btn mt-5 mb-4" type="submit">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!--  END CONTENT PART  -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
