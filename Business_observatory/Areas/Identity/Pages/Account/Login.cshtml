@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Breadcrumbs Start -->
<div class="rs-breadcrumbs img3">
    <div class="container">
        <div class="breadcrumbs-inner breadcrumbs-style1">
            <h1 class="page-title">
                Mi cuenta
            </h1>
            <p class="des">  Con "Mi cuenta", podrás gestionar de manera fácil y conveniente tu perfil, preferencias y actividades en nuestra plataforma.</p>
            <ul class="breadcrumbs-area">
                <li title="Go to Bcom">
                    <a class="active" href="https://www.univalle.edu/">Univalle</a>
                </li>
                <li>Mi cuenta</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- My Account Section Start -->
<div class="rs-my-account pt-120 pb-120 md-pt-80 md-pb-80">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 md-mb-50">
                <h2 class="title pb-30 md-pb-15">Login</h2>
                <div class="rs-login">
                    <form id="account" method="post">
                        <div class="form-group mb-30">
                            <label>Nombre de usuario o dirección de correo electrónico<span>*</span></label>
                            <input asp-for="Input.Email" id="fname"  class="form-control-mod" type="text" required="">
                            <label>Contraseña <span>*</span></label>
                            <input asp-for="Input.Password" id="tname"  class="form-control-mod" type="password" required="">
                        </div>
                        <button class="add-btn" type="submit">Log In</button>
                        <label>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="woocommerce-form__input woocommerce-form__input-checkbox" type="checkbox" id="rememberme" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </label>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo electrónico de confirmación</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
